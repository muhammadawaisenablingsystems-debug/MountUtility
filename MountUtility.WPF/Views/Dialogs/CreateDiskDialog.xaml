<Window x:Class="MountUtility.WPF.Views.Dialogs.CreateDiskDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Virtual Disk"
        Icon="/Resources/app.ico"
        Width="450" Height="380"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Create Virtual Disk" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Disk Name" Margin="0,0,0,5"/>
            <TextBox x:Name="DiskNameTextBox" Height="35" Padding="8"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="Size (MB)" Margin="0,0,0,5"/>
            <TextBox x:Name="DiskSizeTextBox" Text="500" Height="35" Padding="8"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <TextBlock Text="Password" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Height="35" Padding="8"/>
        </StackPanel>

        <TextBlock x:Name="ErrorMessage" Grid.Row="4" Foreground="Red"
                   TextWrapping="Wrap" Visibility="Collapsed"/>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Create" Click="Create_Click"
                    Style="{StaticResource SuccessButton}"
                    Width="100" Height="35" Margin="0,0,10,0"/>
            <Button Content="Cancel" Click="Cancel_Click"
                    Style="{StaticResource SecondaryButton}"
                    Width="100" Height="35"/>
        </StackPanel>
    </Grid>
</Window>