<Window x:Class="MountUtility.WPF.Views.Dialogs.FilePreviewDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Preview"
        Icon="/Resources/app.ico"
        Width="800" Height="600"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2C3E50" Padding="15">
            <TextBlock x:Name="TitleText" Text="File Preview"
                       FontSize="18" Foreground="White" FontWeight="Bold"/>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Grid>
                <TextBox x:Name="TextPreview"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         Padding="15"
                         VerticalScrollBarVisibility="Auto"
                         BorderThickness="0"
                         Visibility="Collapsed"/>

                <Image x:Name="ImagePreview"
                       Stretch="Uniform"
                       Margin="15"
                       Visibility="Collapsed"/>

                <TextBlock x:Name="UnsupportedMessage"
                           Text="Preview not supported for this file type."
                           Foreground="#999"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="16"
                           Visibility="Collapsed"/>
            </Grid>
        </ScrollViewer>

        <Border Grid.Row="2" Background="#F5F5F5" Padding="15" BorderBrush="#DDD" BorderThickness="0,1,0,0">
            <Button Content="Close" Click="Close_Click"
                    Style="{StaticResource SecondaryButton}"
                    Width="100" Height="35" HorizontalAlignment="Right"/>
        </Border>
    </Grid>
</Window>