<Window x:Class="MountUtility.WPF.Views.FileExplorerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:MountUtility.WPF.Converters"
        Title="File Explorer"
        Width="1200" Height="800"
        Icon="../Resources/app.ico"
        WindowStartupLocation="CenterScreen"
        Background="#F3F3F3">

    <Window.Resources>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E5E5E5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#CCCCCC"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="IconButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#202020"/>
        </Style>

        <Style x:Key="ListViewItemStyle" TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E5F3FF"/>
                                <Setter Property="BorderBrush" Value="#CCE8FF"/>
                                <Setter Property="BorderThickness" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="DetailsViewTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="200"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="{Binding IconGlyph}"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="16"
                               Foreground="#0078D4"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <TextBlock Text="{Binding Name}"
                               VerticalAlignment="Center"
                               TextTrimming="CharacterEllipsis"/>
                </StackPanel>

                <TextBlock Grid.Column="1"
                           Text="{Binding FormattedSize}"
                           VerticalAlignment="Center"
                           Foreground="#606060"/>

                <TextBlock Grid.Column="2"
                           Text="{Binding TypeDescription}"
                           VerticalAlignment="Center"
                           Foreground="#606060"/>

                <TextBlock Grid.Column="3"
                           Text="{Binding FormattedModified}"
                           VerticalAlignment="Center"
                           Foreground="#606060"/>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="TilesViewTemplate">
            <Border Width="180" Height="80" Margin="4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="{Binding IconGlyph}"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="32"
                               Foreground="#0078D4"
                               VerticalAlignment="Center"
                               Margin="8,0,12,0"/>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding Name}"
                                   FontWeight="SemiBold"
                                   TextTrimming="CharacterEllipsis"
                                   Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding TypeDescription}"
                                   FontSize="11"
                                   Foreground="#606060"
                                   TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{Binding FormattedSize}"
                                   FontSize="11"
                                   Foreground="#606060"
                                   Visibility="{Binding IsFile, Converter={StaticResource BoolToVis}}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="ListViewTemplate">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding IconGlyph}"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="16"
                           Foreground="#0078D4"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0"/>
                <TextBlock Text="{Binding Name}"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </DataTemplate>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2C3E50" Padding="15">
            <Grid>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="TitleText" Text="File Explorer"
                               FontSize="20" Foreground="White" FontWeight="Bold"/>
                </StackPanel>
                <Button Content="Back to Dashboard" Click="BackToDashboard_Click"
                        Style="{StaticResource SecondaryButton}"
                        HorizontalAlignment="Right" Width="150" Height="35"/>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="White" Padding="12,8" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Style="{StaticResource IconButton}"
                            Content="&#xE72B;"
                            Click="GoUp_Click"
                            ToolTip="Up one level"/>
                    <Button Style="{StaticResource IconButton}"
                            Content="&#xE72C;"
                            Click="GoBack_Click"
                            ToolTip="Back"
                            IsEnabled="{Binding ElementName=FileExplorerWindowRoot, Path=CanGoBack}"/>
                    <Button Style="{StaticResource IconButton}"
                            Content="&#xE72D;"
                            Click="GoForward_Click"
                            ToolTip="Forward"
                            IsEnabled="{Binding ElementName=FileExplorerWindowRoot, Path=CanGoForward}"/>
                </StackPanel>

                <Border Grid.Column="1"
                        Background="#F8F8F8"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="2"
                        Margin="8,0,0,0"
                        Height="28">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="&#xE8B7;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="14"
                                   Foreground="#606060"
                                   VerticalAlignment="Center"
                                   Margin="8,0,4,0"/>

                        <ItemsControl x:Name="BreadcrumbControl" Grid.Column="1" VerticalAlignment="Center">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="\"
                                                   Margin="2,0"
                                                   Foreground="#606060"
                                                   VerticalAlignment="Center"/>
                                        <Button Content="{Binding Name}"
                                                Tag="{Binding Path}"
                                                Click="BreadcrumbButton_Click"
                                                Style="{StaticResource LinkButton}"
                                                FontSize="12"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <Border Grid.Row="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid Margin="4,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ToolBar Grid.Column="0"
                         Background="Transparent"
                         BorderThickness="0">
                    <Button Style="{StaticResource IconButton}"
                            Content="&#xE710;"
                            Click="ShowUploadDialog_Click"
                            ToolTip="Upload file"/>
                    <Button Style="{StaticResource IconButton}"
                            Content="&#xE8F4;"
                            Click="ShowCreateFolderDialog_Click"
                            ToolTip="New folder"/>
                    <Separator/>
                    <Button x:Name="CutButton"
                            Style="{StaticResource IconButton}"
                            Content="&#xE8C6;"
                            Click="Cut_Click"
                            IsEnabled="False"
                            ToolTip="Cut"/>
                    <Button x:Name="CopyButton"
                            Style="{StaticResource IconButton}"
                            Content="&#xE8C8;"
                            Click="Copy_Click"
                            IsEnabled="False"
                            ToolTip="Copy"/>
                    <Button x:Name="PasteButton"
                            Style="{StaticResource IconButton}"
                            Content="&#xE77F;"
                            Click="Paste_Click"
                            IsEnabled="False"
                            ToolTip="Paste"/>
                    <Separator/>
                    <Button x:Name="RenameButton"
                            Style="{StaticResource IconButton}"
                            Content="&#xE8AC;"
                            Click="Rename_Click"
                            IsEnabled="False"
                            ToolTip="Rename"/>
                    <Button x:Name="DeleteButton"
                            Style="{StaticResource IconButton}"
                            Content="&#xE74D;"
                            Click="DeleteFile_Click"
                            IsEnabled="False"
                            ToolTip="Delete"/>
                    <Separator/>
                    <Button x:Name="DownloadButton"
                            Style="{StaticResource IconButton}"
                            Content="&#xE896;"
                            Click="DownloadFile_Click"
                            IsEnabled="False"
                            ToolTip="Download"/>
                    <Button x:Name="PreviewButton"
                            Style="{StaticResource IconButton}"
                            Content="&#xE8A0;"
                            Click="PreviewFile_Click"
                            IsEnabled="False"
                            ToolTip="Preview"/>
                    <Separator/>
                    <Button Style="{StaticResource IconButton}"
                            Content="&#xE72C;"
                            Click="RefreshFiles_Click"
                            ToolTip="Refresh"/>
                </ToolBar>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="8,0">
                    <TextBlock Text="View:"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"
                               Foreground="#606060"/>
                    <Button x:Name="DetailsViewButton"
                            Style="{StaticResource IconButton}"
                            Content="&#xE8A9;"
                            Click="SetDetailsView_Click"
                            ToolTip="Details"/>
                    <Button x:Name="TilesViewButton"
                            Style="{StaticResource IconButton}"
                            Content="&#xE80A;"
                            Click="SetTilesView_Click"
                            ToolTip="Tiles"/>
                    <Button x:Name="ListViewButton"
                            Style="{StaticResource IconButton}"
                            Content="&#xE8FD;"
                            Click="SetListView_Click"
                            ToolTip="List"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="3" Background="White">
            <Grid>
                <ListView x:Name="FilesListView"
                          Background="White"
                          BorderThickness="0"
                          ScrollViewer.HorizontalScrollBarVisibility="Auto"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          ItemContainerStyle="{StaticResource ListViewItemStyle}"
                          SelectionMode="Extended"
                          SelectionChanged="FilesListView_SelectionChanged"
                          MouseDoubleClick="FilesListView_MouseDoubleClick"
                          AllowDrop="True"
                          DragOver="FilesListView_DragOver"
                          Drop="FilesListView_Drop"
                          PreviewMouseLeftButtonDown="FilesListView_PreviewMouseLeftButtonDown"
                          MouseMove="FilesListView_MouseMove">
                    <ListView.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Open" Click="ContextMenu_Open_Click"/>
                            <Separator/>
                            <MenuItem Header="Cut" Click="Cut_Click">
                                <MenuItem.Icon>
                                    <TextBlock Text="&#xE8C6;" FontFamily="Segoe MDL2 Assets"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="Copy" Click="Copy_Click">
                                <MenuItem.Icon>
                                    <TextBlock Text="&#xE8C8;" FontFamily="Segoe MDL2 Assets"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="Paste" Click="Paste_Click" x:Name="ContextPasteMenuItem">
                                <MenuItem.Icon>
                                    <TextBlock Text="&#xE77F;" FontFamily="Segoe MDL2 Assets"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <Separator/>
                            <MenuItem Header="Rename" Click="Rename_Click">
                                <MenuItem.Icon>
                                    <TextBlock Text="&#xE8AC;" FontFamily="Segoe MDL2 Assets"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="Delete" Click="DeleteFile_Click">
                                <MenuItem.Icon>
                                    <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <Separator/>
                            <MenuItem Header="Download" Click="DownloadFile_Click" x:Name="ContextDownloadMenuItem">
                                <MenuItem.Icon>
                                    <TextBlock Text="&#xE896;" FontFamily="Segoe MDL2 Assets"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="Preview" Click="PreviewFile_Click" x:Name="ContextPreviewMenuItem">
                                <MenuItem.Icon>
                                    <TextBlock Text="&#xE8A0;" FontFamily="Segoe MDL2 Assets"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <Separator/>
                            <MenuItem Header="New Folder" Click="ShowCreateFolderDialog_Click">
                                <MenuItem.Icon>
                                    <TextBlock Text="&#xE8F4;" FontFamily="Segoe MDL2 Assets"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="Upload File" Click="ShowUploadDialog_Click">
                                <MenuItem.Icon>
                                    <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <Separator/>
                            <MenuItem Header="Refresh" Click="RefreshFiles_Click">
                                <MenuItem.Icon>
                                    <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets"/>
                                </MenuItem.Icon>
                            </MenuItem>
                        </ContextMenu>
                    </ListView.ContextMenu>
                </ListView>

                <TextBlock x:Name="NoFilesMessage"
                           Text="This folder is empty"
                           Foreground="#999"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="16"
                           Visibility="Collapsed"/>
            </Grid>
        </Border>

        <Border Grid.Row="4" Background="#F8F8F8" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="12,6">
            <Grid>
                <TextBlock x:Name="StatusText"
                           Text="Ready"
                           FontSize="12"
                           Foreground="#606060"
                           VerticalAlignment="Center"/>
                <TextBlock x:Name="ItemCountText"
                           Text=""
                           FontSize="12"
                           Foreground="#606060"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>