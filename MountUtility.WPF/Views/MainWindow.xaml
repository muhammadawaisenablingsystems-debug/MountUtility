<Window x:Class="MountUtility.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Disk Mount Utility"
        Width="900" Height="700"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing"
        StateChanged="Window_StateChanged">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid x:Name="MainGrid">
        <Grid x:Name="LoadingPanel" Visibility="Collapsed" Background="#80000000" Panel.ZIndex="999">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Loading..." FontSize="24" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Initializing vault..." FontSize="14" Foreground="White"
                           HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>

        <Grid x:Name="VaultUnlockPanel" Visibility="Collapsed" Background="#F5F5F5">
            <Border Background="White" Width="400" Height="250"
                    CornerRadius="8" Padding="30"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Effect="{StaticResource CardShadow}">
                <StackPanel>
                    <TextBlock Text="Unlock Local Vault" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

                    <TextBlock Text="Database Password" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="VaultPasswordBox" Height="35" Margin="0,0,0,15"/>

                    <TextBlock x:Name="VaultErrorMessage" Foreground="Red" TextWrapping="Wrap"
                               Margin="0,0,0,15" Visibility="Collapsed"/>

                    <Button Content="Unlock" Click="UnlockVault_Click"
                            Style="{StaticResource PrimaryButton}" Height="40"/>
                </StackPanel>
            </Border>
        </Grid>

        <Grid x:Name="MainContentPanel" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#2C3E50" Padding="20">
                <StackPanel>
                    <TextBlock Text="Virtual Disk Manager" FontSize="24" Foreground="White" FontWeight="Bold"/>
                    <TextBlock Text="Secure disk management with post-quantum cryptography"
                               FontSize="12" Foreground="#BDC3C7" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <Border x:Name="MountedDiskSection" Visibility="Collapsed"
                            Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,20"
                            Effect="{StaticResource CardShadow}">
                        <StackPanel>
                            <Grid Margin="0,0,0,15">
                                <TextBlock x:Name="MountedDiskTitle" FontSize="18" FontWeight="Bold"
                                           VerticalAlignment="Center"/>
                                <Button Content="Unmount" Click="UnmountDisk_Click"
                                        Style="{StaticResource DangerButton}"
                                        HorizontalAlignment="Right" Width="100" Height="35"/>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock x:Name="MountedDiskName" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Text="Size: " FontWeight="SemiBold"/>
                                        <TextBlock x:Name="MountedDiskSize"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Text="Used: " FontWeight="SemiBold"/>
                                        <TextBlock x:Name="MountedDiskUsed"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <TextBlock Text="Free: " FontWeight="SemiBold"/>
                                        <TextBlock x:Name="MountedDiskFree"/>
                                    </StackPanel>

                                    <ProgressBar x:Name="MountedDiskProgress" Height="8" Margin="0,0,0,5"/>
                                    <TextBlock x:Name="MountedDiskPercentage" FontSize="12" Foreground="#666"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="20,0,0,0">
                                    <Button Content="Browse Files" Click="BrowseFiles_Click"
                                            Style="{StaticResource PrimaryButton}"
                                            Width="120" Height="35" Margin="0,0,0,10"/>
                                    <Button Content="Resize Disk" Click="ResizeMountedDisk_Click"
                                            Style="{StaticResource SecondaryButton}"
                                            Width="120" Height="35"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Background="White" CornerRadius="8" Padding="20"
                            Effect="{StaticResource CardShadow}">
                        <StackPanel>
                            <Grid Margin="0,0,0,15">
                                <TextBlock Text="Available Disks" FontSize="18" FontWeight="Bold"
                                           VerticalAlignment="Center"/>
                                <Button Content="Create New Disk" Click="ShowCreateDialog_Click"
                                        Style="{StaticResource SuccessButton}"
                                        HorizontalAlignment="Right" Width="140" Height="35"/>
                            </Grid>

                            <ItemsControl x:Name="DisksListControl">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F8F9FA" CornerRadius="6"
                                                Padding="15" Margin="0,0,0,10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                        <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="SemiBold"/>
                                                        <Border Background="#3498DB" CornerRadius="3" Padding="5,2" Margin="10,0,0,0">
                                                            <TextBlock Text="{Binding Status}" Foreground="White" FontSize="11"/>
                                                        </Border>
                                                    </StackPanel>

                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                                        <TextBlock Text="Size: " FontSize="12" Foreground="#666"/>
                                                        <TextBlock Text="{Binding FormattedSize}" FontSize="12" Foreground="#666"/>
                                                    </StackPanel>

                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="Created: " FontSize="12" Foreground="#666"/>
                                                        <TextBlock Text="{Binding FormattedCreatedAt}" FontSize="12" Foreground="#666"/>
                                                    </StackPanel>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <Button Content="Mount" Click="MountDisk_Click" Tag="{Binding}"
                                                            Style="{StaticResource PrimaryButton}"
                                                            Width="80" Height="30" Margin="0,0,5,0"
                                                            Visibility="{Binding IsNotMounted, Converter={StaticResource BoolToVis}}"/>
                                                    <Button Content="Resize" Click="ResizeDisk_Click" Tag="{Binding}"
                                                            Style="{StaticResource SecondaryButton}"
                                                            Width="80" Height="30" Margin="0,0,5,0"
                                                            Visibility="{Binding IsNotMounted, Converter={StaticResource BoolToVis}}"/>
                                                    <Button Content="Delete" Click="DeleteDisk_Click" Tag="{Binding}"
                                                            Style="{StaticResource DangerButton}"
                                                            Width="80" Height="30"
                                                            Visibility="{Binding IsNotMounted, Converter={StaticResource BoolToVis}}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <TextBlock x:Name="NoDisksMessage" Text="No virtual disks created yet"
                                       Foreground="#999" HorizontalAlignment="Center"
                                       Margin="0,20,0,0" Visibility="Collapsed"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>